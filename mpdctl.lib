_xLIB_MPDCTL_=true

mUpdate(){
  mpc update --wait; mpc rescan --wait
}

mPlayAll(){
  mpc listall | mpc add; mpc play
}

mListPlay(){
  # music=$(mpc listall | rofi -dmenu -i -p "Select one Music"); 
  # music=$(mpc playlist | rofi -dmenu -i  -format "i%s" \ -p "Select one Music"); 
  music=$(mpc playlist | rofi -dmenu -i  -format "d%s" \ -p "Select one Music"); 
  if [ -n "$music" ]; then 
    index=$(echo "$music" | cut -d '%' -f1) 
    echo "$music";
    echo $index
    mpc play "$index"
  fi
}