_xLIB_MPDCTL_=true

mUpdate(){
  mpc update --wait; mpc rescan --wait
}

mPlayAll(){
  mpc listall | mpc add; mpc play
}

mListPlay(){
  music=$(mpc listall | rofi -dmenu -i -p "Select one Music"); 
  [ -n "$music" ] && { 
    echo "$music"; mpc clear; 
    mpc search "(filename == '$music')" | mpc add && mpc play; 
  } 
}